/* pages/login/index.wxss */
page { 
  width: 100%;
  height: 100%;
  
}
.border {
 border: 1rpx solid red;
}
.login-container {
 box-sizing: border-box;
 width: 100%;
 height: 100%;
 padding: 40rpx 20rpx 0 20rpx;
}
.logo-img {
 display: flex;
 justify-content: center; 
}
.password-container {
 position: relative;
}
.password-container .show-password {
 position: absolute;
 right: 40rpx;
 top: 20rpx;
 z-index: 999999;
}


.login-container .login-btn {
 width: 91%;
 border-radius: 10rpx;
 margin-top: 40rpx;
 margin-left: 15px;
}